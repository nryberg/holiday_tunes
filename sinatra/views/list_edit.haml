.span-24.last.pair
  .span-4.label list by
  .span-8.last.value= @item
.span-24.last
  %table.push-1.span-14.last
    - @results.each do |result|
      %tr
        %td.span-10
          = detail_link(@item, result["_id"], result["name"]) 
        %td.span-3{:style=> "text-align:right"}= commify(result["count"].to_i)
        - if session["flag1"] == result["index"]
          %td Flagged
        - else
          %td.span-2
            %a{:href => "/flag/1/#{@item}/#{result['index']}"} Flag
        - if session["flag2"] == result["index"]
          %td Flagged
        - else
          %td.span-2
            %a{:href => "/flag/2/#{@item}/#{result['index']}"} Flag
        %td.span-2
          %a{:href => "/rename/#{@item}/#{result['index']}"} Rename
.span-12
  - if @skip_value > 0 then
    %a.span-4{:href => @last_link} <- Last 
  - else 
    .span-4 <- Last
  - if @skip_value + 20 <= @count then
    %a.span-3{:href => @next_link} Next ->
  - else
    .span-4 Next ->
%p
  %a{:href => "/pairup"} Pair

